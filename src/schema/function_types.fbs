table hlbool {
    value:bool;
}

// hlvecbytes is a vector of bytes

table hlvecbytes {
    value:[ubyte];
}

// hlsizeprefixedbuffer is a vector of bytes prefixed with a 32 bit integer

table hlsizeprefixedbuffer {
    size:int;
    value:[ubyte];
}

// hlvoid is a void (used for functions that return nothing)

table hlvoid {
